<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head.ejs %>
  <title>SHVII Hub - Challenges</title>
  <link rel="stylesheet" href="/css/challenges.css">
</head>

<body>
  <div class="wrapper">
    <% include ../partials/navbar.ejs %>
    <div class="main-panel">
      <div class="content">
        <div class="container-fluid">
          <!-- TRACKS -->
          <div class="row">
            <h3>Tracks</h3>
          </div>
          <div class="row">
            <div class="col-xl-4 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">
                      attach_money
                    </i>
                  </div>
                  <p class="card-category">Track</p>
                  <h3 class="card-title track-title">Fintech
                  </h3>
                </div>
                <div class="card-footer">
                </div>
              </div>
            </div>
            <div class="col-xl-4 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">
                      developer_board
                    </i>
                  </div>
                  <p class="card-category">Track</p>
                  <h3 class="card-title track-title">Hardware
                  </h3>
                </div>
                <div class="card-footer">
                </div>
              </div>
            </div>
            <div class="col-xl-4 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                  <div class="card-icon">
                    <i class="fas fa-brain"></i>
                  </div>
                  <p class="card-category">Track</p>
                  <h3 class="card-title track-title">Big Data and AI
                  </h3>
                </div>
                <div class="card-footer">
                </div>
              </div>
            </div>
            <div class="col-xl-4 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                  <div class="card-icon">
                    <i class="fas fa-medkit"></i>
                  </div>
                  <p class="card-category">Track</p>
                  <h3 class="card-title track-title">Health
                  </h3>
                  <div class="track-sponsor">sponsored by AstraZeneca</div>
                </div>
                <div class="card-footer">
                </div>
              </div>
            </div>
            <div class="col-xl-4 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                  <div class="card-icon">
                    <i class="fas fa-sitemap"></i>
                  </div>
                  <p class="card-category">Track</p>
                  <h3 class="card-title track-title">Online Collaboration
                  </h3>
                  <div class="track-sponsor">sponsored by Cisco</div>
                </div>
                <div class="card-footer">
                </div>
              </div>
            </div>
            <div class="col-xl-4 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                  <div class="card-icon">
                    <i class="fas fa-flask"></i>
                  </div>
                  <p class="card-category">Track</p>
                  <h3 class="card-title track-title">General
                  </h3>
                </div>
                <div class="card-footer">
                </div>
              </div>
            </div>
          </div>
          <!-- CHALLENGES -->
          <div class="row">
              <h3>Challenges</h3>
            </div>
          <div class="row">
            <% challenges.forEach(challenge => { %>
            <div class="col-lg-3 col-md-6">
              <div class="card h-75">
                <div class="card-header card-header-success">
                  <h4 class="card-title text-center">
                    <%- challenge.title %>
                  </h4>
                </div>
                <div class="item-content">
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                      <div class="card-text text-center">
                        <h5>
                          <%- challenge.description %>
                        </h5>
                      </div>
                    </li>
                    <li class="list-group-item">
                      <div class="card-text text-center">
                        <h5><b>Prizes:</b>
                          <%- challenge.prizes %>
                        </h5>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
      <% include ../partials/footer.ejs %>
    </div>
  </div>
</body>

</html>